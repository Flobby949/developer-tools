    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.0",
    "marked": "^16.2.1",
    "monaco-editor": "^0.52.2",
    "mqtt": "^5.14.1",
    "pinia": "^3.0.3",
    "qrcode": "^1.5.4",
    "qrcode-reader": "^1.0.4",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
